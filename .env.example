# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_TABLE_NAME=Chatbot_Requests

# Square Configuration - Production
SQUARE_WEBHOOK_SECRET=your_production_webhook_secret
SQUARE_APPLICATION_ID=your_production_app_id
SQUARE_ACCESS_TOKEN=your_production_access_token
SQUARE_CHECKOUT_URL=https://checkout.square.site/merchant/YOUR_MERCHANT_ID/checkout/YOUR_CHECKOUT_ID

# Square Configuration - Sandbox
SQUARE_WEBHOOK_SECRET_SANDBOX=your_sandbox_webhook_secret
SQUARE_APPLICATION_ID_SANDBOX=your_sandbox_app_id
SQUARE_ACCESS_TOKEN_SANDBOX=your_sandbox_access_token
SQUARE_CHECKOUT_URL_SANDBOX=https://square.link/u/YOUR_SANDBOX_LINK

# Square Environment Toggle (sandbox or production)
SQUARE_ENVIRONMENT=sandbox
SQUARE_API_VERSION=2025-05-21

# Email Configuration (Optional)
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_TEMPLATE_ID=your_emailjs_template_id
EMAILJS_USER_ID=your_emailjs_user_id

# Security Keys
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_random_secret_key_here