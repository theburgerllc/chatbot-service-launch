# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_TABLE_NAME=Chatbot_Requests

# Square Configuration - Production
SQUARE_WEBHOOK_SECRET=your_production_webhook_secret
SQUARE_APPLICATION_ID=your_production_app_id
SQUARE_ACCESS_TOKEN=your_production_access_token
SQUARE_CHECKOUT_URL=https://square.link/u/YOUR_CHECKOUT_LINK

# Square Configuration - Sandbox
SQUARE_WEBHOOK_SECRET_SANDBOX=your_sandbox_webhook_secret
SQUARE_APPLICATION_ID_SANDBOX=your_sandbox_app_id
SQUARE_ACCESS_TOKEN_SANDBOX=your_sandbox_access_token
SQUARE_CHECKOUT_URL_SANDBOX=https://square.link/u/YOUR_SANDBOX_LINK

# Square Environment Toggle
SQUARE_ENVIRONMENT=sandbox
SQUARE_API_VERSION=2025-05-21

# NEW: Plan-specific checkout URLs
SQUARE_STANDARD_CHECKOUT_URL=https://square.link/u/your_standard_link
SQUARE_FIRST_MONTH_CHECKOUT_URL=https://square.link/u/your_first_month_link
SQUARE_TODAY_ONLY_CHECKOUT_URL=https://square.link/u/your_today_only_link
SQUARE_PREMIUM_CHECKOUT_URL=https://square.link/u/your_premium_link

# NEW: Feature Flags
NEXT_PUBLIC_ENABLE_NEW_PRICING=false
NEXT_PUBLIC_ENABLE_FIRST_MONTH_PROMO=false
NEXT_PUBLIC_ENABLE_TODAY_ONLY_PROMO=false
NEXT_PUBLIC_ENABLE_WEEKEND_SPECIAL=false

# Email Configuration
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_TEMPLATE_ID=your_emailjs_template_id
EMAILJS_USER_ID=your_emailjs_user_id

# Security Keys
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_random_secret_key_here

# NEW: Analytics Configuration
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=FB_PIXEL_ID
ANALYTICS_SECRET=your_analytics_secret_key

# NEW: Campaign Management
CAMPAIGN_MANAGER_ENABLED=true
DEFAULT_CAMPAIGN_DURATION_HOURS=24
MAX_ACTIVE_CAMPAIGNS=3